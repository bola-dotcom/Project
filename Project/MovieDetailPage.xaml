<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project.MovieDetailPage"
             Title="MovieDetailPage">
    <VerticalStackLayout>
        <Label Text="{Binding title}" FontSize="Medium" FontAttributes="Bold"/>
        <Label Text="{Binding emoji}" FontSize="Small"/>
        <Label Text="{Binding year}" FontSize="Small"/>
        <Label Text="{Binding Genre}" FontSize="Small"/>
        <Button Text="Back" Clicked = "Button_Clicked"/>
    </VerticalStackLayout>
</ContentPage>